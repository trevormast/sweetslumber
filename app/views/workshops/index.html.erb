<p id="notice"><%= notice %></p>

<h1>Upcoming Classes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Location</th>
      <th>Type</th>
      <th>Time</th>
      <th>Limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= workshop.location.name  %></td>
        <td><%= workshop.subject %></td>
        <td><%= workshop.time %></td>
        <td><%= workshop.limit %></td>
        <td><%= link_to("Register", register_workshop_path(workshop), method: :patch) %></td>
        <%if current_user.try(:admin?)  %>
          <td><%= link_to 'Show', workshop %></td>
          <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
          <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.try(:admin?) %>
  <%= link_to 'New Workshop', new_workshop_path %>
<% end %>
