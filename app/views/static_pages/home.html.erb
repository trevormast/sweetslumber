    </div>
    <div class="carousel">
      <div class="carousel-img">
        <%= image_tag("n131ups3hog-amanda-jordan-crop.jpg") %>
      </div>
      <div class="text-overlay">
        <h2>Breastfeeding Friendly</h2>
      </div>
